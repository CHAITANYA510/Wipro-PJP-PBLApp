<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.wipro.bean.Car" table="car_details">
    	<id name="regNo" column="regno"></id>
    	<property name="color" column="color"></property>
    	<property name="manufacturer" column="manufacturer"></property>
    	<property name="model" column="model"></property>
    </class>
</hibernate-mapping>