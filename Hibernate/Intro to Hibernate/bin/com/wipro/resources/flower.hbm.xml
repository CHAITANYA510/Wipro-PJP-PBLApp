<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.wipro.bean.Flower" table="flowers">
    	<id name="flowerID" column="flowerid" type="string">
    		<generator class="assigned"></generator>
    	</id>
    	<property name="flowerName" column="flowername" type="string"></property>
    	<property name="color" column="color" type="string"></property>
    	<property name="price" column="price" type="int"></property>
    </class>
</hibernate-mapping>